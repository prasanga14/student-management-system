<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="405.0" prefWidth="270.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.sms.controller.PaymentDialogController">
    <children>
        <Label text="Payment ID:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />
        <TextField fx:id="paymentIdField" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />

        <Label text="Student Id:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="60.0" />
        <TextField fx:id="studentIdField" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0" />

        <Label text="Student Name:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="100.0" />
        <TextField fx:id="studentNameField" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0" />

        <Label text="Faculty:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="140.0" />
        <TextField fx:id="facultyField" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="140.0" />

        <Label text="Due:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="180.0" />
        <TextField fx:id="dueField" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="180.0" />

        <Label text="Deadline:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="220.0" />
        <TextField fx:id="deadlineField" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="220.0" />

        <Label text="Status:" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="260.0" />
        <TextField fx:id="statusField" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="260.0" />

        <Button onAction="#handleSaveAction" prefWidth="100.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Save" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" />
        <Button onAction="#handleCancelAction" prefWidth="100.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px;" text="Cancel" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" />
    </children>
</AnchorPane>
