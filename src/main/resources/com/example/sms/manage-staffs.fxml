<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sms.ManageStaffsController">
    <!-- Sidebar -->
    <AnchorPane prefWidth="200.0" style="-fx-background-color: #187937;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Welcome, Admin" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />
            <Button fx:id="manageStudentBtn" onMouseClicked="#openManageStudent" prefWidth="160.0" style="-fx-background-color: #d9d9d9;" text="Manage Students" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="80.0">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font></Button>
            <Button fx:id="manageStaffs" onMouseClicked="#openManageStaffs" prefWidth="160.0" style="-fx-background-color: #d9d9d9;" text="Manage Staffs" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="130.0">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font></Button>
            <Button fx:id="manageTeacherBtn" onMouseClicked="#openManageTeacher" prefWidth="160.0" style="-fx-background-color: #d9d9d9;" text="Manage Teacher" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="180.0">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font></Button>
            <Button fx:id="managePaymentBtn" onMouseClicked="#openPayment" prefWidth="160.0" style="-fx-background-color: #d9d9d9;" text="Payment" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="230.0">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font></Button>
            <Button fx:id="studentReportBtn" prefWidth="160.0" style="-fx-background-color: #d9d9d9;" text="Student Report" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="280.0">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font></Button>
            <Button fx:id="viewResultsBtn" prefWidth="160.0" style="-fx-background-color: #d9d9d9;" text="View Results" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="330.0">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font></Button>
            <Button fx:id="logout" layoutX="20.0" layoutY="391.0" onMouseClicked="#handleLogout" prefWidth="160.0" style="-fx-background-color: #d9d9d9;" text="Logout" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="391.0">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font></Button>
        </children>
    </AnchorPane>

    <!-- Main Content -->
    <AnchorPane style="-fx-background-color: #F0F0F0;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <TableView fx:id="staffsTable" layoutX="20.0" layoutY="14.0" prefHeight="327.0" prefWidth="562.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="14.0">
                <columns>
                    <TableColumn fx:id="staffIdColumn" text="Staff ID" />
                    <TableColumn fx:id="staffNameColumn" text="Staff Name" />
                    <TableColumn fx:id="positionColumn" text="Position" />
                    <TableColumn fx:id="facultyColumn" text="Faculty" />
                    <TableColumn fx:id="shiftColumn" text="Shift" />
                    <TableColumn fx:id="enrolledDateColumn" text="Enrolled Date" />
                    <TableColumn fx:id="statusColumn" text="Status" />
                </columns>
            </TableView>
            <AnchorPane layoutX="-1.0" layoutY="350.0" prefHeight="92.0" prefWidth="602.0">
                <children>
                    <Button fx:id="deleteBtn" layoutX="468.0" layoutY="29.0" onMouseClicked="#handleDeleteAction" prefHeight="26.0" prefWidth="90.0" style="-fx-background-color: #187937;" text="DELETE" textFill="WHITE" />
                    <Button fx:id="addBtn" layoutX="256.0" layoutY="29.0" onMouseClicked="#handleAddAction" prefHeight="26.0" prefWidth="90.0" style="-fx-background-color: #187937;" text="ADD" textFill="WHITE" />
                    <Button fx:id="updateBtn" layoutX="364.0" layoutY="29.0" onMouseClicked="#handleUpdateAction" prefHeight="26.0" prefWidth="90.0" style="-fx-background-color: #187937;" text="UPDATE" textFill="#fcfcfc" />
                </children>
            </AnchorPane>
        </children>
    </AnchorPane>
</AnchorPane>
